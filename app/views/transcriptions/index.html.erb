<div data-controller="transcription" class="min-h-screen bg-gray-50 py-12 px-4">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow-lg p-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-2">Voice Transcription</h1>
      <p class="text-gray-600 mb-8">Record your voice and get instant transcription with AI summary</p>
      
      <div id="recording-controls" class="mb-8">
        <button id="start-button" 
                class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-8 rounded-lg transition duration-200 shadow-md">
          <span class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7 4a3 3 0 016 0v4a3 3 0 11-6 0V4zm4 10.93A7.001 7.001 0 0017 8a1 1 0 10-2 0A5 5 0 015 8a1 1 0 00-2 0 7.001 7.001 0 006 6.93V17H6a1 1 0 100 2h8a1 1 0 100-2h-3v-2.07z" clip-rule="evenodd"/>
            </svg>
            Start Listening
          </span>
        </button>
        
        <button id="stop-button" 
                class="hidden bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-8 rounded-lg transition duration-200 shadow-md">
          <span class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8 7a1 1 0 00-1 1v4a1 1 0 001 1h4a1 1 0 001-1V8a1 1 0 00-1-1H8z" clip-rule="evenodd"/>
            </svg>
            Stop Listening
          </span>
        </button>
        
        <div id="recording-status" class="hidden mt-4 flex items-center text-red-600">
          <span class="inline-block w-3 h-3 bg-red-600 rounded-full mr-2 animate-pulse"></span>
          <span class="font-medium">Recording... <span id="timer">00:00</span></span>
        </div>
      </div>
      
      <div id="live-transcription" class="hidden mb-8">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Live Transcription</h2>
        <div class="bg-gray-50 rounded-lg p-6 min-h-32 border-2 border-gray-200">
          <p id="live-text" class="text-gray-700 text-lg leading-relaxed"></p>
        </div>
      </div>
      
      <div id="results" class="hidden space-y-8">
        <div>
          <h2 class="text-2xl font-semibold text-gray-800 mb-4">Full Transcription</h2>
          <div class="bg-gray-50 rounded-lg p-6 border-2 border-gray-200">
            <div id="speaker-transcription"></div>
            <button id="copy-button" class="mt-4 text-blue-600 hover:text-blue-700 font-medium">
              Copy Transcription
            </button>
          </div>
        </div>
        
        <div>
          <h2 class="text-2xl font-semibold text-gray-800 mb-4">AI Summary</h2>
          <div class="bg-blue-50 rounded-lg p-6 border-2 border-blue-200">
            <p id="summary-text" class="text-gray-700 text-lg leading-relaxed"></p>
          </div>
        </div>
      </div>
      
      <div id="loading" class="hidden text-center py-8">
        <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
        <p class="mt-4 text-gray-600">Processing your recording...</p>
      </div>
    </div>
  </div>
</div>